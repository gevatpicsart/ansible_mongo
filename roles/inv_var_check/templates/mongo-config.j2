storage:
  dbPath: /storage/db
  journal:
    enabled: true
  engine: wiredTiger
systemLog:
  destination: file
  logAppend: true
  logRotate: reopen
  path: /var/log/mongodb/mongod.log
net:
  port: {{ mongo_port }}
  bindIp: 0.0.0.0
security:
  keyFile: /etc/mongokeyfile
replication:
    replSetName: {{ mongo_repl_name }}
processManagement:
   pidFilePath: /var/run/mongodb/mongod.pid
operationProfiling:
   mode: all